{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "ConnectionStrings": {
    "Postgres": "Host=${DB_HOST:postgres};Port=${DB_PORT:5432};Database=${DB_NAME:subscriptiondb};Username=${DB_USER};Password=${DB_PASSWORD};Include Error Detail=false;Timeout=30;Command Timeout=30;Maximum Pool Size=100"
  },
  "AllowedHosts": "*.yourdomain.com"
}
